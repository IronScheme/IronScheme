<?xml version="1.0"?>
<configuration>

  <location path="~/blog/edit">
    <system.web>
      <authorization >
        <allow users="admin" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>

  <location path="~/blog/add">
    <system.web>
      <authorization >
        <allow users="admin" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>

  <location path="~/blog/delete">
    <system.web>
      <authorization >
        <allow users="admin" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>
  
	<system.web>
		<compilation debug="true"/>
		<trust level="Full"/>
    <httpHandlers>
			<add verb="*" type="IronScheme.Web.Handler, IronScheme" path="*.ss"/>
		</httpHandlers>
		<httpModules>
			<add name="Routing" type="IronScheme.Web.RoutingModule, IronScheme"/>
		</httpModules>
    
    <authentication mode="Forms">
      <forms loginUrl="~/auth/login" >
        <credentials>
          <user name="admin" password="admin"/>
        </credentials>
      </forms>
    </authentication>
    
  </system.web>
	<system.webServer>
		<handlers>
			<add name="IronScheme.Web" path="*.ss" verb="*" type="IronScheme.Web.Handler" resourceType="Unspecified" preCondition="integratedMode"/>
		</handlers>
	</system.webServer>
</configuration>
