<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net20</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <AssemblyTitle>IronScheme.Closures</AssemblyTitle>
    <Product>IronScheme.Closures</Product>
    <Copyright>Copyright ©  2008</Copyright>
    <OutDir>bin/$(Configuration)/$(TargetFramework)</OutDir>
    <DebugType>pdbonly</DebugType>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
    <NoWarn>$(NoWarn);MSB3073</NoWarn>
    <!--<UseNetFxIlTools Condition="'$(UseNetFxIlTools)' == ''">true</UseNetFxIlTools>-->
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.Scripting\IronScheme.Scripting.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="IronScheme.Glue.il">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent" DependsOnTargets="IronSchemeBuildTools">
    <PropertyGroup>
      <UseNetFxIlTools Condition="$(UseNetFxIlTools) == '' and Exists('$(TargetFrameworkSDKToolsDirectory)ildasm.exe') and Exists('$(TargetFrameworkDirectory)')">true</UseNetFxIlTools>
      <UseNetFxIlTools Condition="$(UseNetFxIlTools) == ''">false</UseNetFxIlTools>
      <UseNetFxIlTools Condition="$(UseNetFxIlTools) == 'True' and !(Exists('$(TargetFrameworkSDKToolsDirectory)ildasm.exe') and Exists('$(TargetFrameworkDirectory)'))">false</UseNetFxIlTools>
      <TargetedRuntimeVersion Condition="$(TargetedRuntimeVersion) == '' or $(TargetedRuntimeVersion) == 'v'">v4.0.30319</TargetedRuntimeVersion>
    </PropertyGroup>

    <PropertyGroup Condition="$(UseNetFxIlTools) == True">
      <ILAsmPath>"$(TargetedFrameworkDir)\ilasm" /dll /PDB /DEBUG /NOLOGO /QUIET /mdv="$(TargetedRuntimeVersion)" /res:"$(TargetDir)$(TargetName).res"</ILAsmPath>
      <ILDAsmPath>"$(TargetFrameworkSDKToolsDirectory)ildasm" /NOBAR /LINENUM</ILDAsmPath>
    </PropertyGroup>

    <PropertyGroup Condition="$(UseNetFxIlTools) != True">
      <ILAsmPath>"$(IronSchemeBuildToolsPath)ilasm" -dll -PDB -DEBUG -NOLOGO -QUIET -mdv="$(TargetedRuntimeVersion)" "$(TargetDir)$(TargetName).res"</ILAsmPath>
      <ILDAsmPath>"$(IronSchemeBuildToolsPath)ildasm" -LINENUM</ILDAsmPath>
    </PropertyGroup>
      
    <PropertyGroup>
      <ILOutputFile>$(TargetDir)$(TargetName).il</ILOutputFile>
      <ILGlue>$(TargetDir)IronScheme.Glue.il</ILGlue>
      <ILAsmArgs>-out:"$(TargetPath)" "$(ILOutputFile)" "$(ILGlue)"</ILAsmArgs>
      <ILDAsmArgs>-out:"$(ILOutputFile)" "$(TargetPath)"</ILDAsmArgs>
    </PropertyGroup>

    <PropertyGroup>
      <TailCallMaker>"$(IronSchemeBuildToolsPath)TailCallMaker" "$(ILOutputFile)"</TailCallMaker>
    </PropertyGroup>

    <Exec Command="$(ILDAsmPath) $(ILDAsmArgs)"/>
    <Exec Command="$(TailCallMaker)"/>

    <!-- incase PDB failure -->
    <Exec Condition="$(UseNetFxIlTools) == True" ContinueOnError="true" Command="$(ILAsmPath) $(ILAsmArgs)" />
    <Exec Command="$(ILAsmPath) $(ILAsmArgs)" />
  </Target>
</Project>